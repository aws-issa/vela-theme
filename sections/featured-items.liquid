{% comment %} Featured Items (2-up) {% endcomment %}

<section class="tw-w-full tw-max-w-none tw-my-12">
  <div class="tw-pl-8">
    <h3 class="tw-uppercase tw-tracking-widest tw-text-sm tw-font-semibold">Featured Items</h3>
    <h1 class="tw-text-4xl md:tw-text-5xl tw-font-bold tw-mt-2">You don't want to miss these!</h1>
  </div>

  <div
    x-data
    class="tw-mt-8 tw-flex tw-gap-8 tw-pl-8 tw-pr-8"
  >
    {% for block in section.blocks %}
      {% assign product = block.settings.product %}
      {% if product %}
        <a
          href="{{ product.url }}"
          class="tw-relative tw-shrink-0 tw-w-full md:tw-w-1/2 tw-aspect-[16/9] tw-rounded-lg tw-overflow-hidden tw-flex tw-items-end"
          style="background-image:url('{{ product.featured_image | image_url: width: 1200 }}'); background-size:cover; background-position:center;"
        >
          <div class="tw-w-full tw-bg-black/30 tw-backdrop-blur-sm tw-text-white tw-p-6">
            <h2 class="tw-text-2xl tw-font-extrabold">{{ product.title }}</h2>
            <p class="tw-mt-1 tw-mb-4 tw-text-base">{{ block.settings.short_description }}</p>
            <span class="tw-inline-block tw-text-base tw-font-bold tw-uppercase tw-underline tw-text-[rgb(1,70,72)]"
              >Shop Now</span
            >
          </div>
        </a>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Featured Items",
  "max_blocks": 2,
  "settings": [],
  "blocks": [
    {
      "type": "item",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "text",
          "id": "short_description",
          "label": "Short description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Items (2-up)"
    }
  ]
}
{% endschema %}
