{% schema %}
{
  "name": "Feat Collection Carousel",
  "tag": "section",
  "settings": [
    {
      "type": "range",
      "id": "carousel_height",
      "label": "Carousel Height (px)",
      "min": 200,
      "max": 800,
      "step": 10,
      "default": 500
    }
  ],
  "blocks": [
    {
      "type": "collection_slide",
      "name": "Collection Slide",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "featured_title",
          "label": "Featured Title",
          "default": "Featured Collection"
        },
        {
          "type": "textarea",
          "id": "featured_description",
          "label": "Featured Description",
          "default": "Write something about this collection."
        },
        {
          "type": "select",
          "id": "overlay_position",
          "label": "Overlay position",
          "options": [
            { "value": "bottom-right", "label": "Bottom right" },
            { "value": "upper-left", "label": "Upper left" }
          ],
          "default": "bottom-right"
        }
      ]
    }
  ],
  "max_blocks": 5,
  "presets": [
    {
      "name": "Featured Collection Carousel",
      "category": "Collections"
    }
  ]
}
{% endschema %}

<div
  class="tw-relative tw-overflow-hidden group"
  style="height: {{ section.settings.carousel_height }}px"
  x-data="{ current: 0 }"
>
  <div
    class="tw-flex tw-transition-transform tw-duration-700 tw-ease-in-out"
    :style="'transform: translateX(-' + (current * 100) + '%)'"
  >
    {% for block in section.blocks %}
      {% assign collection = block.settings.collection %}
      <div
        class="tw-flex-shrink-0 tw-w-full tw-bg-cover tw-bg-center tw-relative"
        style="background-image: url('{{ collection.image | image_url: width: 1600 }}'); height: {{ section.settings.carousel_height }}px"
      >
        <div
          class="
            tw-absolute tw-max-w-md tw-flex tw-flex-col tw-space-y-2
            {% if block.settings.overlay_position == 'upper-left' %}
              tw-top-8 tw-left-8 tw-items-start tw-text-left
            {% else %}
              tw-bottom-8 tw-right-8 tw-items-end tw-text-right
            {% endif %}
          "
        >
          <h2 class="tw-text-6xl md:tw-text-10xl tw-font-extrabold tw-text-white tw-drop-shadow-lg">
            {{ block.settings.featured_title }}
          </h2>
          <p class="tw-text-4xl tw-leading-relaxed tw-text-white tw-drop-shadow">
            {{ block.settings.featured_description }}
          </p>
          <a
            href="{{ collection.url }}"
            class="tw-inline-block tw-bg-green-700 hover:tw-bg-green-800 tw-text-white tw-font-semibold tw-px-6 tw-py-3 tw-rounded tw-transition tw-shadow-lg"
            >View Collection</a
          >
        </div>
      </div>
    {% endfor %}
  </div>

  <!-- Navigation Arrows -->
  <button
    type="button"
    @click="current = (current - 1 + {{ section.blocks.size }}) % {{ section.blocks.size }}"
    class="tw-absolute tw-w-12 tw-h-12 tw-flex tw-items-center tw-justify-center tw-bg-white tw-text-black tw-shadow tw-rounded-sm tw-opacity-80 hover:tw-opacity-100 tw-transition-opacity tw-duration-300 tw-z-10 tw-text-2xl tw-left-4 tw-top-1/2 -tw-translate-y-1/2"
  >
    &#8592;
  </button>

  <button
    type="button"
    @click="current = (current + 1) % {{ section.blocks.size }}"
    class="tw-absolute tw-w-12 tw-h-12 tw-flex tw-items-center tw-justify-center tw-bg-white tw-text-black tw-shadow tw-rounded-sm tw-opacity-80 hover:tw-opacity-100 tw-transition-opacity tw-duration-300 tw-z-10 tw-text-2xl tw-right-4 tw-top-1/2 -tw-translate-y-1/2"
  >
    &#8594;
  </button>
</div>
