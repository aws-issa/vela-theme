{% schema %}
{
  "name": "Feat Collection Carousel",
  "tag": "section",
  "settings": [
    {
      "type": "range",
      "id": "carousel_height",
      "label": "Carousel Height (px)",
      "min": 200,
      "max": 800,
      "step": 10,
      "default": 500
    }
  ],
  "blocks": [
    {
      "type": "collection_slide",
      "name": "Collection Slide",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "featured_title",
          "label": "Featured Title",
          "default": "Featured Collection"
        },
        {
          "type": "textarea",
          "id": "featured_description",
          "label": "Featured Description",
          "default": "Write something about this collection."
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Featured Collection Carousel",
      "category": "Collections"
    }
  ]
}
{% endschema %}

<div
  class="relative overflow-hidden"
  style="height: {{ section.settings.carousel_height }}px"
  x-data="{ current: 0 }"
>
  <div class="flex transition-transform duration-700 ease-in-out" :style="`transform: translateX(-${current * 100}%);`">
    {% for block in section.blocks %}
      {% assign collection = block.settings.collection %}
      <div
        class="flex-shrink-0 w-full bg-cover bg-center relative"
        style="background-image: url('{{ collection.image | image_url: width: 1600 }}'); height: {{ section.settings.carousel_height }}px"
      >
        <div class="absolute bottom-4 right-4 bg-black bg-opacity-60 text-white p-4 rounded-lg max-w-sm text-right">
          <h2 class="text-xl font-bold">{{ block.settings.featured_title }}</h2>
          <p class="text-sm mt-1 mb-2">{{ block.settings.featured_description }}</p>
          <a
            href="{{ collection.url }}"
            class="bg-white text-black px-4 py-2 rounded hover:bg-gray-200 inline-block text-sm"
            >View Collection</a
          >
        </div>
      </div>
    {% endfor %}
  </div>

  <!-- Navigation Arrows -->
  <div class="absolute inset-0 flex justify-between items-center px-4 opacity-0 hover:opacity-100 transition-opacity duration-300">
    <button
      @click="current = (current - 1 + {{ section.blocks.size }}) % {{ section.blocks.size }}"
      class="bg-white text-black p-2 rounded-full shadow hover:bg-gray-100"
    >
      &#8592;
    </button>
    <button
      @click="current = (current + 1) % {{ section.blocks.size }}"
      class="bg-white text-black p-2 rounded-full shadow hover:bg-gray-100"
    >
      &#8594;
    </button>
  </div>
</div>
