{% comment %}
  Special Newsletter Section – two‑column layout:
  • Left: image
  • Right: newsletter signup with pre‑heading, heading, body text, form, and legal note
{% endcomment %}

<section class="newsletter-special">
  <div class="tw-grid tw-grid-cols-1 md:tw-grid-cols-2 tw-gap-0">
    {%- comment -%} LEFT COLUMN – IMAGE {%- endcomment -%}
    <div class="newsletter-special__image">
      {%- if section.settings.image != blank -%}
        <img
          src="{{ section.settings.image | image_url: width: 1200 }}"
          alt="{{ section.settings.image.alt | escape }}"
          width="1200"
          height="800"
          class="tw-w-full tw-h-full tw-object-cover"
        >
      {%- else -%}
        <div class="tw-w-full tw-h-full tw-bg-gray-200"></div>
      {%- endif -%}
    </div>

    {%- comment -%} RIGHT COLUMN – SIGNUP PANEL {%- endcomment -%}
    <div
      class="newsletter-special__content tw-flex tw-flex-col tw-justify-center tw-items-center md:tw-items-start tw-p-10"
      style="background-color: {{ section.settings.bg_color }};"
    >
      {%- if section.settings.subheading != blank -%}
        <p class="tw-uppercase tw-text-sm tw-font-semibold tw-tracking-wider tw-text-[rgb(1,70,72)]">
          {{ section.settings.subheading }}
        </p>
      {%- endif -%}

      {%- if section.settings.heading != blank -%}
        <h2 class="tw-text-3xl md:tw-text-4xl tw-font-bold tw-mt-2 tw-text-[rgb(1,70,72)]">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}

      {%- if section.settings.body != blank -%}
        <p class="tw-mt-4 tw-mb-6 tw-text-lg tw-max-w-xl tw-text-[rgb(1,70,72)]">
          {{ section.settings.body }}
        </p>
      {%- endif -%}

      {%- form 'customer', id: 'SpecialNewsletter-Form', class: 'newsletter-form tw-w-full tw-max-w-md' -%}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="tw-flex tw-w-full">
          <input
            id="Newsletter-{{ section.id }}"
            type="email"
            name="contact[email]"
            class="tw-flex-grow tw-p-3 tw-border tw-border-gray-300 tw-rounded-l-md focus:tw-outline-none"
            placeholder="Email address"
            required
          >
          <button
            type="submit"
            class="tw-bg-[rgb(1,70,72)] tw-text-white tw-px-6 tw-rounded-r-md tw-font-bold hover:tw-opacity-90"
          >
            {{ section.settings.button_label }}
          </button>
        </div>

        {%- if form.errors -%}
          <p class="tw-text-red-600 tw-mt-2">{{ form.errors.messages.email }}</p>
        {%- elsif form.posted_successfully? -%}
          <p class="tw-mt-2 tw-text-[rgb(1,70,72)] tw-font-semibold">{{ section.settings.success_message }}</p>
        {%- endif -%}
      {%- endform -%}

      {%- if section.settings.legal_note != blank -%}
        <p class="tw-mt-6 tw-text-xs tw-text-[rgb(1,70,72)] tw-max-w-md">
          {{ section.settings.legal_note }}
        </p>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Special Newsletter",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Left image"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#e6f5b9"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Sub‑heading",
      "default": "SUBSCRIBE TO OUR NEWSLETTER"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main heading",
      "default": "Be the first to know!"
    },
    {
      "type": "textarea",
      "id": "body",
      "label": "Body text",
      "default": "Get the latest updates from your favorite creators plus product launches, limited‑run merch, sales, and events happening soon!"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Sign Up"
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Success message",
      "default": "Thanks for signing up!"
    },
    {
      "type": "textarea",
      "id": "legal_note",
      "label": "Legal note",
      "default": "This site is protected by hCaptcha and the hCaptcha Privacy Policy and Terms of Service apply."
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Special Newsletter",
      "category": "Custom"
    }
  ]
}
{% endschema %}
